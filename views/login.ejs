<!DOCTYPE html>
<html>
    <head>
        <title>Login Page</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/bootstrap/bootstrap.min.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/bootstrap/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js" integrity="sha256-uEFhyfv3UgzRTnAZ+SEgvYepKKB0FW6RqZLrqfyUNug=" crossorigin="anonymous"></script>

        <script>    
            $(()=>{
                
                $('#login').on('click',()=>{
                    var $email = $('#email').val();
                    var $password = $('#password').val();
                    $.post('/login',{email: $email, password: $password},(data,status)=>{
                        if(data == 'ok'){
                            window.location.href="/page"                            
                        }
                        else if(data == 'error'){
                            $('#warning').text('Please signup!')
                        }
                        else{
                            
                            $('#warning').text('Invalid Credintials!')

                        }
                    })
                })
            })
        </script>
    </head>
    <body >
        <header>
            <% include ./login/header %>
        </header>
        <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 text-center p-5">
                    <h2 class="text-dark">Welcome to Chat World!</h2>
                </div>
                <div class="col-sm-3 mb-4">
                    <h3 class="text-center text-dark">Login</h3>
                    <p id="warning" class="text-dark"></p>
                    <input type="email" id="email" class="form-control mb-2 shadow" placeholder="Enter Email">
                    <input type="text" id="password" class="form-control mb-2 shadow" placeholder="Enter Password">
                    <button id="login" class="btn btn-light shadow">Login </button >
                </div>
                <div class="col-sm-9">
                    <p class="text-dark text-capitalize">
                    chat with your friends with our chat application that allows you to communicate with your friends! 
                    </p>
                </div>
            </div>
        </div>
        </section>
        <footer style="top:96.6%; position: absolute; width: 100%">
            <%- include ./login/footer %>
        </footer>  
    </body>
</html>